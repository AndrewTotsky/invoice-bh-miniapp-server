{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "CommonJS",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "outDir": "./dist-server",
        "rootDir": "./server",
        "composite": true
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules", "dist"]
}
